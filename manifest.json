{
    "manifest_version": 3,
    "name": "Enhanced Shortcuts",
    "version": "1.0.0",
    "description": "Adding some QOL shortcuts for chromium browsers",
    "icons": {
        "16": "./icons/16px.png",
        "32": "./icons/32px.png",
        "48": "./icons/48px.png",
        "128": "./icons/128px.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "permissions": ["clipboardWrite", "tabs", "commands", "offscreen"],
    
    "commands": {
        "run-foo": {
            "suggested-key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
        "description": "Copy the URL of the current active site"
        }
    }
}